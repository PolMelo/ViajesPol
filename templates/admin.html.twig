{% extends 'base.html.twig' %}

{% block title %}Administración de proveedores{% endblock %}

{% block body %}
    <div class="min-h-screen bg-gray-50 flex flex-col items-center justify-center p-8">
        <header class="w-full flex justify-between items-center mb-10">
            <h1 class="text-2xl font-bold text-green-600">Panel de Administración</h1>
            <a href="{{ path('app_logout') }}" class="text-red-600 font-semibold hover:underline">
                Cerrar sesión
            </a>
        </header>

        <main class="bg-white shadow rounded-2xl p-8 w-full max-w-3xl text-center">
            <h2 class="text-xl font-semibold mb-4">Bienvenido, {{ app.user.email }}</h2>
            <p class="text-gray-600">Puedes crear, editar, visualizar y eliminar proveedores.</p>

                <a href="{{ path('app_home') }}" class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600">
                    Ver proveedores
                </a>
            </div>
        </main>
    </div>
{% endblock %}
