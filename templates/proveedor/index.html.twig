{% extends 'viewer.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="/css/table.css">
{% endblock %}

{% block viewer_content %}


{% if is_granted('ROLE_ADMIN') %}
    <div class="top-bar">
        <a href="{{ path('app_proveedor_nuevo') }}" class="btn-add">A침adir proveedor</a>
    </div>
{% endif %}

<!-- FILTROS con placeholders para que el user sepa lo que esta haciendo-->
<form method="get" action="{{ path('app_proveedores') }}">
    <input type="text" name="id" value="{{ filtros.id }}" placeholder="ID">
    <input type="text" name="cif" value="{{ filtros.cif }}" placeholder="CIF">
    <input type="text" name="nombre" value="{{ filtros.nombre }}" placeholder="Nombre">
    <input type="text" name="correo" value="{{ filtros.correo }}" placeholder="Correo electr칩nico">

<!-- Para actividad y tipo he hecho desplegables que no dejan margen de error al usuario -->

    <select name="activo">
        <option value="">Activo/Inactivo</option>
        <option value="true" {% if filtros.activo == 'true' %}selected{% endif %}>Activo</option>
        <option value="false" {% if filtros.activo == 'false' %}selected{% endif %}>Inactivo</option>
    </select>

    <select name="tipo_proveedor">
        <option value="">Tipo proveedor</option>
        <option value="Hotel" {% if filtros.tipo_proveedor|lower == 'hotel' %}selected{% endif %}>Hotel</option>
        <option value="Crucero" {% if filtros.tipo_proveedor|lower == 'crucero' %}selected{% endif %}>Crucero</option>
        <option value="Estaci칩n de esqu칤" {% if filtros.tipo_proveedor|lower == 'estaci칩n de esqu칤' %}selected{% endif %}>Estaci칩n de esqu칤</option>
        <option value="Parque tem치tico" {% if filtros.tipo_proveedor|lower == 'parque tem치tico' %}selected{% endif %}>Parque tem치tico</option>
    </select>

    <button type="submit">游댌 Filtrar</button>
</form>
<!-- TABLA DE PROVEEDORES con todas las columnas, en caso de ser admin tendra la columna extra de acciones-->
<div class="table-responsive">
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>CIF</th>
                <th>Nombre</th>
                <th>Correo electr칩nico</th>
                <th>Tel칠fono</th>
                <th>Tel칠fono 2</th>
                <th>Tipo proveedor</th>
                <th>Activo</th>
                <th>Fecha creaci칩n</th>
                <th>칔ltima modificaci칩n</th>
                {% if is_granted('ROLE_ADMIN') %}
                    <th>Acciones</th>
                {% endif %}
            </tr>
        </thead>
        <!-- Un bucle para mostrar todos los proveedors -->
        <tbody>
            {% for proveedor in proveedores %}
                <tr>
                    <td>{{ proveedor.id }}</td>
                    <td>{{ proveedor.cif }}</td>
                    <td>{{ proveedor.nombre }}</td>
                    <td>{{ proveedor.correoElectronico }}</td>
                    <td>{{ proveedor.telefono }}</td>
                    <td>{{ proveedor.telefono2 ?? '-' }}</td>
                    <td>{{ proveedor.tipoProveedor }}</td>
                    <td>
                    <!-- Cambiamos el texto y la clsase dependiendo si es tru or false (darle colores para que sea mas visual) -->
                        {% if proveedor.activo %}
                            <span class="status-true">Activo</span>
                        {% else %}
                            <span class="status-false">Inactivo</span>
                        {% endif %}
                    </td>
                    <td>{{ proveedor.fechaCreacion ? proveedor.fechaCreacion|date('d/m/Y H:i') : '-' }}</td>
                    <td>{{ proveedor.ultimaModificacion ? proveedor.ultimaModificacion|date('d/m/Y H:i') : '-' }}</td>

                    {% if is_granted('ROLE_ADMIN') %}
                        <td class="acciones">
                        <!-- Aqui estan las acciones eliminar y editar, si quisieras editar te redirige y si quieres borrar te hace confirmarlo
                        indicandote tambien el nombre del proveedor para que sepas lo que haces
                        (Estilo 2FA para evitar eliminaciones sin querer) -->
                        <a href="{{ path('app_proveedor_editar', {id: proveedor.id}) }}">Editar</a> |
                        <form method="post" action="{{ path('app_proveedor_eliminar', {id: proveedor.id}) }}"style="display:inline"
                          onsubmit="return confirm('쮼liminar el proveedor {{ proveedor.nombre|e('js') }}?');">
                          <input type="hidden" name="_token" value="{{ csrf_token('eliminar' ~ proveedor.id) }}">
                         <button type="submit">Eliminar</button>
                        </form>

                        </td>
                    {% endif %}
                </tr>
            {% else %}
                <tr>
                    <td colspan="11" class="text-center text-muted py-4">No se encontraron resultados</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
